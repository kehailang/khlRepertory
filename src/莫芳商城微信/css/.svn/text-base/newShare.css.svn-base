@charset "utf-8";

.titleBox{
	width:100%; height:50px; float:left;
}

.bigBBox{
	width:100%; float:left; position:relative; height: 666px; background-color:#35bbf4;
}

.bigBox{
	width:476px; height:666px; position:absolute; top:50%; left:50%; 
	transform: translate(-50%,-50%) scale(1);
	-ms-transform: translate(-50%,-50%) scale(1);
	-webkit-transform: translate(-50%,-50%) scale(1);
	-o-transform: translate(-50%,-50%) scale(1);
	-moz-transform: translate(-50%,-50%) scale(1);
}

.bigImg{
	width:100%; display:block;
}

.dataBox{
	position:absolute; top: 72%;left: 20%;width: 60%;overflow: hidden;
}

.pcodeDiv{
	float:left; width:100%; position:relative; 
}

.pcodeT{
	float:left; width:110px; text-align:center; font-size: 17px;line-height: 20px;padding-top: 15px;padding-bottom: 15px;
}

.pcodeID{
	position:absolute; width:100%; padding-left:110px; top:0; bottom:0;  box-sizing:border-box; -moz-box-sizing:border-box; -webkit-box-sizing:border-box;
}

.pcodeI{
	-webkit-appearance:none; outline: none;
    width:100%; height:44px; margin-top:1px; border:2px solid #000000;box-sizing:border-box;-moz-box-sizing:border-box; -webkit-box-sizing:border-box;
	border-radius:5px;-moz-border-radius:5px; padding-left:5px;font-size:16px;
}

.phoneDiv{
	float:left; width:100%; position:relative;height: 54px; 
}

.phoneI{
  	-webkit-appearance:none; outline: none;
    width:100%; height:44px; margin-top:5px; border:2px solid #000000;box-sizing:border-box;-moz-box-sizing:border-box; -webkit-box-sizing:border-box;
	border-radius:5px;-moz-border-radius:5px; text-align:center; font-size:16px;
}

.bottunDiv{
	float:left; width:100%; position:relative;height: 54px;
}

.bottunB{
	-webkit-appearance:none; outline: none;
    width:100%; height:44px; margin-top:5px; border:2px solid #000000;box-sizing:border-box;-moz-box-sizing:border-box; -webkit-box-sizing:border-box;
	border-radius:5px;-moz-border-radius:5px; text-align:center; font-size:16px; color:#FFFFFF; background-color:#f03644; font-weight:bold;cursor:pointer;
}

.bottunB:active{
background-color:#CA313C;
}