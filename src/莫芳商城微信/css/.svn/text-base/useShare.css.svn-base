@charset "utf-8";

body {
	-webkit-touch-callout:none;
	-webkit-user-select:none;
	-khtml-user-select:none;
	-moz-user-select:none;
	-ms-user-select:none;
	user-select:none;
	margin:0 0 0 0; padding:0 0 0 0; font-family:微软雅黑; text-align:center; position:relative; background-color:#eeeeee;
}

.titleBox{
	width:100%; height:50px; float:left;
}

.bigBBox{
	width:100%; float:left; position:relative; height: 684px; background-color:#ffd86d;
}

.bigBox{
	position:absolute; width:452px; height:684px; position:absolute; top:50%; left:50%; 
	transform: translate(-50%,-50%) scale(1);
	-ms-transform: translate(-50%,-50%) scale(1);
	-webkit-transform: translate(-50%,-50%) scale(1);
	-o-transform: translate(-50%,-50%) scale(1);
	-moz-transform: translate(-50%,-50%) scale(1);
}

.bigImg{
	width:80%; display:block;margin: 0 auto;
}

.dataBox{
	width: 70%;background: #fff;margin: 0 auto;border: 3px solid black;border-bottom-left-radius: 10px;border-bottom-right-radius: 10px;margin-top: -10px;border-top: 0;padding-bottom: 15px;
}
.dataBox img{width: 50%;margin: 0 auto;padding: 20px 0 10px;}
.T1{
	width:100%; text-align:center; font-size:22px; float:left; font-weight:bold;
}

.T1s{
	color:#f03644;
}

.T2{
   width:100%; text-align:center; font-size:16px; float:left; margin-top:4%;
}

.T3{
   width:100%; text-align:center; font-size:16px; float:left; margin-top:1%;
}

.Line{
  width: 80%; float: left; margin-top: 5%; margin-left: 10%;
}

.Line img{
	width:100%; display:block;
}

.T4{
   width:100%; text-align:center; font-size:17px; float:left; margin-top:4%;
}

.T5{
   width:100%; text-align:center; font-size:17px; float:left; margin-top:1px;
}

.T5s{
	text-decoration:underline; color:#f03644;
}


.bottunB{
	-webkit-appearance:none; outline: none;
    width:60%; height:46px; margin-top:6%; border:4px solid #000000;box-sizing:border-box;-moz-box-sizing:border-box; -webkit-box-sizing:border-box;
	border-radius:10px;-moz-border-radius:10px; text-align:center; font-size:16px; color:#FFFFFF; background-color:#f03644; font-weight:bold;cursor:pointer;
}

.bottunB:active{
background-color:#CA313C;
}

#mcover{ position: fixed; top:0;  left:0; width:100%; height:100%;background:rgba(0, 0, 0, 0.85);  display:none;z-index:20000;}

#mcover img {position: fixed;right: 18px;top:20px;width: 230px;z-index:20001;}