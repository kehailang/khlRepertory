@charset "utf-8";
body{
	padding: 0; margin: 0; position: relative;
}

.downloadHint_BigDiv{
	position: fixed; bottom: 0px; z-index: 920; height: 52px; width: 100%;
}

.downloadHint_BigDiv2{
	filter:alpha(opacity=20);    
    -moz-opacity: 0.8;    
    opacity: 0.8;   
	position: fixed; bottom: 0px; background-color: #000000; z-index: 919; height: 52px; width: 100%;
}

.downloadHint_Close{
	width: 22px; height: 22px; position: absolute; top:15px; left: 15px; cursor: pointer;
}

.downloadHint_App{
	width: 64px; height: 64px; position: absolute; top:-20px; left: 49px;
}

.downloadHint_Text{
	width: auto; height: 20px; line-height: 20px; font-size: 18px; font-family: 微软雅黑; color: #ffffff; position: absolute; top:16px; left: 123px;
}

.downloadHint__button{
	cursor: pointer;
	-moz-border-radius:5px;-webkit-border-radius:5px;border-radius:5px;
	background-color: #ee4910; width: 90px; padding: 8px 0px; color: #ffffff; font-size: 12px; font-family: 微软雅黑; line-height: 14px; position: absolute; top:11px; right: 15px;
	text-align: center;
}