body{background-color: #eeeeee;}
/*登录css*/
.binding{padding: 0 10px;}
.user-icon,.message-icon,.password-icon,.password1-icon,.confirm-password-icon,.agree-icon,.eyes-icon{margin: 0 4%;position: absolute;top: 50%;-webkit-transform: translate(0,-50%);-ms-transform: translate(0,-50%);transform: translate(0,-50%);background: url(../images/ss-sprites.png) no-repeat; background-size: 250px 250px;}
.binding-input{background: #fff;margin: 15px auto;border-radius: 6px;height: 42px;position: relative;overflow: hidden;}
.user-icon{width: 18px;height: 19px;background-position:-114px -80px;}
.message-icon{width: 20px;height: 18px;background-position:-136px -80px;}
.password-icon{width: 16px;height: 20px; background-position:-91px -80px;}
.password1-icon,.confirm-password-icon{width: 20px;height: 20px; background-position:-177px -88px;background-size: 280px 280px;}
.confirm-password-icon{background-position:-203px -88px;}
.now-login,.next,.submit{width: 100%;margin:40px auto 10px;font-size: 16px;color: #fff;text-align: center;height: 42px;line-height: 42px; display: block;}
.binding-fs{width: 80%;height: 40px; padding-left: 5px; position: absolute;top: 50%;left: 10.8%;  -webkit-transform: translate(0,-50%);-ms-transform: translate(0,-50%);transform: translate(0,-50%);}
.verify{width: 36%;height: 100%;color: #fff; position: absolute;top: 50%;right: 0; -webkit-transform: translate(0,-50%);-ms-transform: translate(0,-50%);transform: translate(0,-50%);border-bottom-left-radius: 0;border-top-left-radius: 0;}
.login-right{text-align: right;}
.login-right a,.register-agree a{color: #ef4811;}
.eyes-icon{width: 17px;height: 20px;display: inline-block;position: absolute;top: 50%;right:4%; background-position:-44px -77px;margin: 0;background-size: 225px 225px;} 
.eyes-icon.current{background-position:-64px -77px;}
.register-agree{margin-top: 10px;position: relative;padding-left: 20px;}
.agree-icon{width: 16px;height: 16px;display: inline-block;margin: 1px 0;left: 0;background-position:-16px 0;background-size: 225px 225px;}
.agree-icon.current{background-position:0 0;}
.label-txt{position: relative;top: 12px;padding:0 1% 0 4%;color: #666;}
.binding-fs.input-left{left: initial;}
