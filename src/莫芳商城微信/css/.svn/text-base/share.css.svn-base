.mcover{ position: fixed; top:0;  left:50%; width:100%; height:100%;background:rgba(0, 0, 0, 0.85) ;  display:none;z-index:20000;max-width: 768px;-webkit-transform: translate(-50%,0);transform: translate(-50%,0);}

.mcover img {position: fixed;right: 18px;top:20px;width: 230px;z-index:20001;}

body,html{overflow: hidden;height: 100%;}

.bigBBox{
	width:100%;float: left;position:relative; height: 666px;height: 100%;background: #de443c url(../images/share/shareBg1.png) no-repeat 50% 50%;background-size:contain ; background-position-y:20px;
}

.shareYl{
position: absolute;
top: 50%;
left: 50%;
width:400px; height:auto;overflow: hidden;
}

.shareYl a{
	font-weight:bold;
	box-sizing:border-box;-moz-box-sizing:border-box; /* Firefox */-webkit-box-sizing:border-box; 
	width:82%;color: #000;padding: 24px 0;line-height: 1px;background: #f6df31;font-size: 16px;text-align: center;
	margin-top: 9%;border: 2px solid #000;border-radius: 10px;display: inline-block; margin-left:9%; }
.shareYl > div{margin-top:301px;}
.shareYl > div h3{font-size: 35px;text-align: center;margin-bottom: 15px;font-weight: bold;}
.shareYl > div h4{color: #FFFFFF;}
.shareYl > div p{color: #fff;text-align: center;}
.shareYl > div p span{color: #000;font-size: 14px;}
.fenxian{width: 100%; background: url(../images/share/shareBg1.png) no-repeat;background-size:100% ;padding: 20px 0 ;}
.shareYl > div .fenxian p{color: #8d8d8d;font-size: 20px;border-bottom: 1px dashed #949493;line-height: 50px;}
.shareYl > div .fenxian input,.shareYl > div .fenxian a{width:90%;color: #000;padding: 24px 0;font-size: 16px;text-align: center;border: 2px solid #000;border-radius: 10px;display: inline-block;height: 0;margin: 0;}
.shareYl > div .fenxian input{margin: 15px 0 5px;}
.input_web{width:200px; height:30px;padding:0 5px;}
.shareYl > div .fenxian input::-webkit-input-placeholder{color:#000;}
.shareYl > div .fenxian input:-moz-placeholder{color:#000;}