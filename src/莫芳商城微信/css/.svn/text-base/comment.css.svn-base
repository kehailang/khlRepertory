body {
	background:#eee;
}
.comment {
	padding:12px 12px;
	text-align:center;
}
.comment textarea {
	width:100%;
	min-height:142px;
	border:1px solid #cacaca;
	background:#fff;
	border-radius:4px;
	box-sizing:border-box;
	padding:4px 6px;
	font-size:13px;
	color:#000;
	border:none;
	-webkit-appearance:none;
	resize:none;
	margin-top:20px;
}
.comment .submit {
	width:100%;
	color:#FFFFFF;
	background-color:#ee4911;
	height:42px;
	border:none;
	font-size:15px;
	letter-spacing:12px;
	line-height:42px;
	border-radius:5px;
	margin-top:30px;
	padding-left:8px;
	display: inline-block;
}
.tel{
	width: 100%;
	height: 40px;
	margin-top: 10px;
	background: #FFF;
	line-height: 40px;
}
.tel span{
	float: left;
	font-size: 13px;
	color: #000;
	padding-left: 10px;
}
.tel input{
	float: left;
	padding-left: 15px;
	margin-top: 12px;
}
